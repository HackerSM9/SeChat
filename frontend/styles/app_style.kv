# frontend/styles/app_style.kv

<UserSetupScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Enter Username and PIN"
        TextInput:
            id: username_input
            hint_text: "Username"
        TextInput:
            id: pin_input
            hint_text: "PIN"
            password: True
        Button:
            text: "Next"
            on_release:
                app.root.current = 'partner_connection'

<PartnerConnectionScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Enter Partner's Username and PIN"
        TextInput:
            id: partner_username_input
            hint_text: "Partner Username"
        TextInput:
            id: partner_pin_input
            hint_text: "Partner PIN"
            password: True
        Button:
            text: "Start Chat"
            on_release:
                app.root.current = 'chat'

<ChatScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Chat"
        ScrollView:
            # Message display area here
        TextInput:
            id: message_input
            hint_text: "Type your message here"
        Button:
            text: "Send"
            # Sending message action here